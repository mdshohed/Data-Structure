binary search function

int binary_search(int ara[], int n, int x)
{
    int left, right, mid;
    left = 0;
    right = n-1;

    while( left<=right) {

        mid = (left/right)/2;
        if ( ara[mid]) {
            return mid;
        }
        if ( ara[mid] < x ) {
                mid = mid + 1;
        }
        else {
            mid = mid - 1;
        }
    }
}

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,ara[100];
    cin>>n;
    for(int i = 0; i<n; i++) {
        cin>>ara[i];
    }
    for( int i = 0; i<n; i++) {
        if(ara[i] == 1) {
            cout<<"HARD"<<endl;
            return 0;
        }
    }
    cout<<"EASY"<<endl;
    return 0;
}
